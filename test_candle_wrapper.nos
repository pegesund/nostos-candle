# Test using the candle wrapper module
use candle.*

main() = {
    println("=== Testing Candle Wrapper Module ===")

    # Create tensors
    t = zeros([2, 3])
    println("Created zeros tensor")
    println(tensorShape(t))

    # Matrix operations
    m1 = fromList([[1.0, 2.0], [3.0, 4.0]])
    m2 = fromList([[5.0, 6.0], [7.0, 8.0]])
    result = matmul(m1, m2)
    println("matmul result:")
    println(toList(result))

    # Binary operations
    a = ones([2, 2])
    b = ones([2, 2])
    c = tensorAdd(a, b)
    println("ones + ones =")
    println(toList(c))

    # Activations
    data = fromList([-1.0, 0.0, 1.0, 2.0])
    activated = relu(data)
    println("relu([-1, 0, 1, 2]):")
    println(toList(activated))

    # Reductions
    t2 = fromList([[1.0, 2.0], [3.0, 4.0]])
    println("tensorSum([[1,2],[3,4]]):")
    println(toList(tensorSum(t2)))

    println("=== Wrapper Test Complete ===")
    0
}
